<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    >
    <Style x:Key="GeneralTextBoxStyle" TargetType="TextBox">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="MaxLength" Value="1024"></Setter>
        <Setter Property="Focusable" Value="True"></Setter>
        <Setter Property="IsReadOnly" Value="True"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <ScrollViewer x:Name="PART_ContentHost" Focusable="False" Margin="5" HorizontalScrollBarVisibility="Hidden" ></ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

    <Style x:Key="GeneralDatePickerStyle" TargetType="DatePicker">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Focusable" Value="True"></Setter>
        <Setter Property="IsEnabled" Value="False"></Setter>
    </Style>


</ResourceDictionary>